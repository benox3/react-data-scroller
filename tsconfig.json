{
  "compilerOptions": {
    "strict": false,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "jsx": "react",
    "plugins": [
      { "name": "typescript-tslint-plugin" }
    ],
    "baseUrl": "types",
    "typeRoots": ["types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ]
}
